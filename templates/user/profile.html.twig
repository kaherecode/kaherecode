{% extends 'base.html.twig' %}
{% set user = app.user %}
{% block title %}{{ user.fullName }} | {{ parent() }}{% endblock %}
{% block body %}
{# hero section #}
<div class="hero text-center py-6">
    <div class="container">
        <img src="{{ asset("images/avatar.png") }}" alt="{{ user.username }}" class="rounded-full w-48 m-auto" />
        <h1 class="mt-4 font-bold text-xl tracking-wide text-gray-900">
            {{ user.fullName }}
        </h1>
        <h2 class="font-semibold text-gray-900">@{{ user.username }}</h2>
        <p class="mt-2 text-gray-800 md:w-2/3 md:mx-auto lg:w-3/5">
            {{ user.bio }}
        </p>
        <ul class="mt-2 flex items-center justify-center">
            {% if user.github %}
            <li>
            <a href="https://github.com/{{ user.github }}" target="_blank" class="inline-block bg-gray-900 text-center p-3 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github w-5 h-5 text-gray-500">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                </svg>
            </a>
            </li>
            {% endif %}

            {% if user.twitter %}
            <li class="ml-1 sm:ml-2">
                <a href="https://twitter.com/{{ user.twitter }}" target="_blank" class="inline-block bg-gray-900 text-center p-3 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter w-5 h-5 text-gray-500">
                        <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" />
                    </svg>
                </a>
            </li>
            {% endif %}

            {% if user.linkedin %}
            <li class="ml-1 sm:ml-2">
                <a href="https://www.linkedin.com/in/{{ user.linkedin }}" target="_blank" class="inline-block bg-gray-900 text-center p-3 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-linkedin w-5 h-5 text-gray-500">
                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                        <rect x="2" y="9" width="4" height="12" />
                        <circle cx="4" cy="4" r="2" />
                    </svg>
                </a>
            </li>
            {% endif %}

            {% if user.website %}
            <li class="ml-1 sm:ml-2">
                <a href="{{ user.website }}" target="_blank" class="inline-block bg-gray-900 text-center p-3 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe w-5 h-5 text-gray-500">
                        <circle cx="12" cy="12" r="10" />
                        <line x1="2" y1="12" x2="22" y2="12" />
                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
                    </svg>
                </a>
            </li>
            {% endif %}
        </ul>
    </div>
</div>
<div class="mt-5">
    <div class="container sm:flex sm:justify-center">
        <div class="sm:w-1/2 sm:p-2 lg:w-1/3 xl:w-1/4">
            <div class="bg-white p-4 rounded-lg shadow-md">
                <span class="font-bold text-4xl">20</span>
                <span class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text text-gray-700 h-4 w-4">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                        <polyline points="14 2 14 8 20 8" />
                        <line x1="16" y1="13" x2="8" y2="13" />
                        <line x1="16" y1="17" x2="8" y2="17" />
                        <polyline points="10 9 9 9 8 9" />
                    </svg>
                    <span class="text-gray-700 ml-1 text-sm">
                        Tutoriels
                    </span>
                </span>
            </div>
        </div>
        <div class="mt-4 sm:w-1/2 sm:mt-0 sm:p-2 lg:w-1/3 xl:w-1/4">
            <div class="bg-white p-4 rounded-lg shadow-md">
                <span class="font-bold text-4xl">48,706</span>
                <span class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye text-gray-700 h-4 w-4">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                    <span class="text-gray-700 ml-1 text-sm">
                        Pages vues
                    </span>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="mt-5 tabs" id="profileTabs">
    <ul class="tab-list">
        <li class="tab-item active" data-target="tutorials">
            Mes tutoriels
        </li>
        <li class="tab-item" data-target="bookmarks">
            Bookmarks
        </li>
    </ul>
    <div id="bookmarks" class="tab-content">
        <div class="container">
            <span class="block text-center p-4">Cett fonctionnalité sera rajouter très bientôt &#128521!</span>
        </div>
    </div>
    <div id="tutorials" class="tab-content">
        <div class="container">
            <div class="mt-5 tabs min-tabs" id="tutorialsTabs">
                <ul class="tab-list">
                    <li class="tab-item active" data-target="drafts">
                        Brouillons (20)
                    </li>
                    <li class="tab-item" data-target="published">
                        Publiés (40)
                    </li>
                </ul>
                <div id="drafts" class="tab-content">
                    {% include 'includes/_profile_tutorials_list.html.twig' %}
                </div>
                <div id="published" class="tab-content">
                    {% include 'includes/_profile_tutorials_list.html.twig' %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
