{% extends 'base.html.twig' %}
{% block title %}Changer de mot de passe | {{ parent() }}{% endblock %}
{% block body %}
<div class="container">
    <div class="mt-20 mb-20 md:mt-32 md:mb-32 md:w-1/2 md:mx-auto lg:w-1/3">
        <h1 class="font-bold text-2xl">Modifie ton mot de passe</h1>
        <p class="mt-2">Entre ton adresse email, nous t'enverrons un lien pour renouveler ton mot de passe.</p>
        <form method="post">
            {% if app.user %}
            <div class="mt-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            {% endif %}
            {% for error in app.flashes('error') %}
                <span class="block mt-4 text-red-600 text-sm">{{ error }}</span>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <span class="block mt-4 text-green-600 text-sm">{{ message }}</span>
            {% endfor %}
            <div class="form-group">
                <input type="email" name="email" placeholder="Adresse email" required autofocus>
            </div>
            {# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}
            <div class="mt-2 flex justify-between">
                <a href="{{ path('user_register') }}" class="text-sm text-blue-500 underline">
                    Je n'ai pas de compte
                </a>
                <a href="{{ path('app_login') }}" class="text-sm text-blue-500 underline">
                    Connexion
                </a>
            </div>
            <div class="form-group">
                <button class="btn" type="submit" id="requestPasswordReset">
                    Envoyer
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
