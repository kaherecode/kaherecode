{% extends 'base.html.twig' %}
{% block title %}Connexion | {{ parent() }}{% endblock %}
{% block body %}
<div class="container">
    <div class="mt-20 mb-20 md:mt-32 md:mb-32 md:w-1/2 md:mx-auto lg:w-1/3">
        <h1 class="font-bold text-2xl">Connecte Toi</h1>
        <form method="post">
            {% for message in app.flashes('success') %}
                <span class="block mt-4 text-green-600 text-sm">{{ message }}</span>
            {% endfor %}
            {% if error %}
            <div class="text-sm text-red-600">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
            <div class="mt-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            {% endif %}
            <div class="form-group">
                <input type="email" value="{{ last_username }}" name="email" placeholder="Adresse email" id="inputEmail" class="form-control" required autofocus>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="form-group flex items-center">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for='_remember_me' class="ml-2 text-gray-700">
                    Se souvenir de moi
                </label>
            </div>
            <div class="mt-2 flex justify-between">
                <a href="{{ path('user_register') }}" class="text-sm text-blue-500 underline">
                    Je n'ai pas de compte
                </a>
                <a href="{{ path('password_reset_request') }}" class="text-sm text-blue-500 underline">
                    Mot de passe oublier
                </a>
            </div>
            <div class="form-group">
                <button class="btn" type="submit" id="login">
                    Me connecter
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
