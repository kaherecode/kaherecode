{% extends 'base.html.twig' %}
{% block title %}Des tutoriels pratiques pour apprendre à coder | {{ parent() }}{% endblock %}
{% block body %}
{# hero section #}
<div class="hero text-center px-4 pt-12 pb-20">
    <h1 class="font-bold text-3xl tracking-wide text-gray-900">
        Modifie ton profil
    </h1>
</div>
<div class="">
    <div class="container py-4 sm:flex">
        <div class="text-center sm:px-2 sm:w-1/2 md:w-1/3">
            <img src="{{ asset('images/avatar.png') }}" alt="" class="m-auto w-48 mb-6" />
            <a href="" class="btn btn-danger">Désactiver mon compte</a>
        </div>
        <hr class="mt-8 sm:hidden" />
        <form action="" class="mt-4 sm:mt-0 sm:px-2 sm:w-1/2 md:w-2/3">
            <div class="form-group">
                <input class="border border-gray-400 rounded w-full p-3 outline-none bg-white opacity-50" type="email" name="email" id="email" placeholder="Adresse email" value="alioukahere@gmail.com" disabled />
            </div>
            <div class="form-group mt-4">
                <input class="border border-gray-400 rounded w-full p-3 outline-none bg-white opacity-50" type="text" name="username" id="username" placeholder="Pseudo" value="alioukahere" disabled />
            </div>
            <div class="form-group mt-4">
                <input class="border border-gray-400 rounded w-full p-3 outline-none bg-white" type="text" name="name" id="name" placeholder="Prénom et Nom" value="Mamadou Aliou Diallo" />
            </div>
            <div class="md:flex md:space-x-3">
                <div class="form-group mt-4 md:w-1/2">
                    <input class="border border-gray-400 rounded w-full p-3 outline-none bg-white" type="text" name="github" id="github" placeholder="Github (kaherecode)" value="" />
                </div>
                <div class="form-group mt-4 md:w-1/2">
                    <input class="border border-gray-400 rounded w-full p-3 outline-none bg-white" type="text" name="twitter" id="twitter" placeholder="Twitter (kaherecode)" value="" />
                </div>
            </div>
            <div class="md:flex md:space-x-3">
                <div class="form-group mt-4 md:w-1/2">
                    <input class="border border-gray-400 rounded w-full p-3 outline-none bg-white" type="text" name="linkedin" id="linkedin" placeholder="Linkedin (kaherecode)" value="" />
                </div>
                <div class="form-group mt-4 md:w-1/2">
                    <input class="border border-gray-400 rounded w-full p-3 outline-none bg-white" type="text" name="website" id="website" placeholder="Site web" value="" />
                </div>
            </div>
            <div class="form-group mt-4">
                <textarea name="bio" id="bio" placeholder="Bio" rows="7" class="border border-gray-400 rounded w-full p-3 outline-none bg-white resize-none"></textarea>
            </div>
            <div class="form-group mt-4">
                <input type="submit" class="btn" value="Valider" />
            </div>
        </form>
    </div>
</div>
{% endblock %}
