{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Confirm your account'|trans }}
	|
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="mt-20 mb-20 md:mt-40 md:mb-40 md:w-1/2 md:mx-auto lg:w-1/3">
			{% if user %}
				{# <h1 class="font-bold text-xl mb-4">{{ 'Welcome'|trans }}
					{{ user.username }}!
					{{ 'Your account have been validated!'|trans }}</h1> #}
				<h1 class="font-bold text-xl mb-4">{{ 'account_validated'|trans({'username': user.username}) }}</h1>
				<a class="text-blue-500 underline" href="{{ path('app_login') }}">{{ 'Log In'|trans }}</a>
			{% else %}
				<h1 class="font-bold text-xl mb-4">{{ 'You have no confirmation.'|trans }}</h1>
				<a class="text-blue-500 underline" href="{{ path('homepage') }}">{{ 'Go back to the homepage'|trans }}</a>
			{% endif %}
		</div>
	</div>
{% endblock %}
