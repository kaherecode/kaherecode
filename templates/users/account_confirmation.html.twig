{% extends 'base.html.twig' %}

{% block title %}
	{{ 'title.confirm_account'|trans }}
	|
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="mt-20 mb-20 md:mt-40 md:mb-40 md:w-1/2 md:mx-auto lg:w-1/3">
			{% if user %}
				<h1 class="font-bold text-xl mb-4 dark:text-gray-300">
					{{ 'user.account_validated'|trans({'username': user.username}) }}
				</h1>
				<a class="text-blue-500 underline dark:text-gray-300" href="{{ path('app_login') }}">
					{{ 'user.login'|trans }}
				</a>
			{% else %}
				<h1 class="font-bold text-xl mb-4 dark:text-gray-300">
					{{ 'user.no_confirmation'|trans }}.
				</h1>
				<a class="text-blue-500 underline dark:text-gray-300" href="{{ path('homepage') }}">
					{{ 'navigate_to_homepage'|trans }}
				</a>
			{% endif %}
		</div>
	</div>
{% endblock %}
