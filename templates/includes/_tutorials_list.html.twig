<div class="-mx-4 flex flex-wrap items-start justify-start">
	{% for tutorial in tutorials|filter(t => t.isPublished) %}
		<div class="w-full md:mt-4 md:w-1/2 lg:w-1/3 xl:w-1/4">
			<div class="p-4 border-solid border-b border-gray-400 md:border-none">
				<div class="flex items-center justify-between">
					<div class="flex items-center">
						<a href="{{ path('show_user', {'username': tutorial.author.username}) }}">
							<img src="{{ tutorial.author.avatar is null ? asset('images/avatar.png') : tutorial.author.avatar }}" alt="{{ tutorial.author.fullName }}" class="w-12 h-12 object-cover rounded-full"/>
						</a>
						<div class="ml-3">
							<span class="block">
								<a href="{{ path('show_user', {'username': tutorial.author.username}) }}" class="font-bold text-gray-800 text-lg">@{{ tutorial.author.username }}</a>
							</span>
							<span class="text-gray-700 text-sm">{{ tutorial.publishedAt|format_date() }}</span>
						</div>
					</div>
					<span class="cursor-pointer">
						<svg class="text-gray-700 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
						</svg>
					</span>
				</div>

				<div class="mt-3 article-image relative">
					{% if tutorial.videoLink %}
						<span class="absolute z-10 right-0 bg-darkerGray text-gray-200 px-2 text-sm">video</span>
					{% endif %}
					<a href="{{ path('tutorial_view', {'slug': tutorial.slug}) }}" class="block w-full h-full relative">
						<img src="{{ tutorial.pictureURL }}" alt="" class="h-40 w-full object-cover"/>
					</a>
				</div>

				<a href="{{ path('tutorial_view', {'slug': tutorial.slug}) }}">
					<h2 class="mt-3 font-bold text-lg tracking-wide">
						{{ tutorial.title|length > 55 ? tutorial.title|slice(0, 55) ~ '...' : tutorial.title }}
					</h2>
				</a>

				<div class="mt-3 flex items-center justify-between">
					<span class="flex items-center">
						<svg class="text-gray-700 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
						</svg>
						<span class="text-sm ml-2 text-gray-700">{{ tutorial.views|number_format }}</span>
					</span>
					<span class="flex items-center">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="text-gray-700 h-5 w-5">
						 	<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
						<span class="text-sm ml-2 text-gray-700">{{ tutorial.readTime }} min.</span>
					</span>
					<span class="flex items-center">
						<svg class="text-gray-700 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
						</svg>
						<span class="text-sm ml-2 text-gray-700">{{ tutorial.comments|filter(c => c.state == constant('STATE_PUBLISHED', c))|length }}</span>
					</span>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
