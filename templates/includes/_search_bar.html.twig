<div class="hidden fixed top-0 left-0 right-0 w-screen h-screen bg-gray-800 bg-opacity-70 z-50 justify-center pt-10 px-4" id="searchModal">
	<div class="w-full sm:w-2/3 lg:w-1/2 xl:w-1/3">
		<input type="search" class="border border-gray-300 rounded w-full px-3 py-2 outline-none bg-white" placeholder="{{ 'search'|trans }}..." id="searchInput" data-search-url="{{ url('kaherecode_search') }}" autocomplete="off" autofocus>

		<div class="bg-white mt-3 rounded overflow-y-auto" style="max-height: 450px" id="searchResults">
			<div id="results" class="hidden"></div>
			<div class="p-1 text-center hidden" id="seeAllResults">
				<a href="" class="text-sm text-blue-600 underline">
					{{ 'see_all_results'|trans }}
				</a>
			</div>
			<div class="p-1 text-center hidden" id="noResults">
				{{ 'no_results'|trans }}
			</div>
		</div>
	</div>
</div>
